<div class="all-the-listings-cotainer">
    <h1>Listings</h1>


    {{#each listings}}


    <div class="listing-card">

        <h3>{{this.title}}</h3>

        <div>
            <img src="{{this.image}}" alt="image of {{this.title}}">
        </div>

        <p>{{this.description}}</p>

        <p>{{this.price}}</p>

        <p>by: {{this.author.username}}</p>


        
        {{!-- How we alow only authors of post to delete their post --}}
        {{#if this.owned}}

        <form action="/listings/delete/{{this._id}}" method="POST"><button>Delete This Listing</button></form>


        {{/if}}

    </div>



    {{/each}}
</div>
